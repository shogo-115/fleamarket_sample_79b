.cardMain
  .icon
    = link_to image_tag('logo.png'), root_path
  .cardContents
    = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
      .cardContents__title
        クレジットカード情報登録
      .cardContents__number
        %label カード番号
        %span 必須
        .numberField
          = text_field_tag "number", "", class: "numberField__text", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      .cardContents__deadline
        %label 有効期限
        %span 必須
        .deadlineField
          %select#exp_month{name: "exp_month", class: "deadlineField__text", type: "text"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          月
          %select#exp_year{name: "exp_year", class: "deadlineField__text", type: "text"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          年
      .cardContents__security
        %label セキュリティコード
        %span 必須
        .securityField
          = text_field_tag "cvc", "", class: "securityField__text", placeholder: "カード背面3桁の番号", maxlength: "4", id: "cvc"
      .cardContents__action
        #card_token    
          = submit_tag "登録する", class: "actionButton", id: "token_submit"
        %p
          = link_to root_url do
            トップページに戻る
  = render partial: "layouts/cardfooter"